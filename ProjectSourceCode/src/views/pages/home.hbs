        <input type="radio" class="btn-check" name="mood" value="mad" id="mad" autocomplete="off" {{#ifEquals mood "mad"
          }}checked{{/ifEquals}}>
        <label class="btn" for="mad">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
            class="bi bi-emoji-angry-fill" style="fill:rgb(255, 106, 106);" viewBox="0 0 16 16">
